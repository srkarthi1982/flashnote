---
import AppShell from "../layouts/AppShell.astro";
import { AvContainer, AvButton, AvTimeline } from "@ansiversa/components";
import { FlashcardDecks, Flashcards, StudySessions, count, db } from "astro:db";

const title = "FlashNote – Ansiversa";
const description = "Capture, review, and remember with calm flashcard study flows.";

const flashnoteTimelineItems = [
  {
    date: "Pillar 01",
    title: "Deck-first organization",
    body: "Keep every topic cleanly separated with focused decks and tags.",
  },
  {
    date: "Pillar 02",
    title: "AI generation pipeline",
    body: "Turn your topics into instant recall prompts in one step.",
  },
  {
    date: "Pillar 03",
    title: "Focused study flow",
    body: "One card at a time, with calm pacing and zero distractions.",
  },
  {
    date: "Pillar 04",
    title: "Review history",
    body: "Track attempts and keep a clear picture of progress over time.",
  },
  {
    date: "Pillar 05",
    title: "Clean card editing",
    body: "Update cards quickly without breaking your study rhythm.",
  },
  {
    date: "Pillar 06",
    title: "Built for retention",
    body: "Capture notes, convert to cards, and review until it sticks.",
  },
];

const [{ value: deckCountRaw } = { value: 0 }] = await db
  .select({ value: count() })
  .from(FlashcardDecks);
const [{ value: cardCountRaw } = { value: 0 }] = await db
  .select({ value: count() })
  .from(Flashcards);
const [{ value: sessionCountRaw } = { value: 0 }] = await db
  .select({ value: count() })
  .from(StudySessions);

const deckCount = Number(deckCountRaw ?? 0);
const cardCount = Number(cardCountRaw ?? 0);
const sessionCount = Number(sessionCountRaw ?? 0);

const formatCompact = (value: number) => {
  if (value >= 1_000_000) {
    return `${(value / 1_000_000).toFixed(2).replace(/\.?0+$/, "")}M`;
  }
  if (value >= 1_000) {
    return `${(value / 1_000).toFixed(1).replace(/\.0$/, "")}K`;
  }
  return value.toLocaleString();
};
---

<AppShell title={title} description={description}>
  <section class="fn-hero">
    <AvContainer size="default">
      <div class="fn-hero__grid">
        <div class="fn-hero__text">
          <div class="av-kicker">
            <span>Learning · Ansiversa Mini App</span>
          </div>
          <h1 class="fn-hero__title">FlashNote</h1>
          <p class="fn-hero__lead">
            Turn notes into recall-ready flashcards. Build decks fast, study with focus, and keep a clean
            review history.
          </p>
          <div class="fn-hero__bullets">
            <span>Deck-based structure that keeps topics organized</span>
            <span>Generate AI-curated cards for instant recall prompts</span>
            <span>Study sessions tracked for long-term retention</span>
