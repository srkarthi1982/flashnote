---
import { AvButton, AvCard, AvContainer } from "@ansiversa/components";
import AppShell from "../layouts/AppShell.astro";

const title = "FlashNote â€“ Ansiversa";
const description = "Capture, review, and remember with calm flashcard study flows.";
---

<AppShell title={title} description={description}>
  <section class="av-section">
    <AvContainer>
      <div class="av-auth-stack-lg">
        <AvCard className="av-auth-card">
          <div class="av-auth-stack-md">
            <div class="av-auth-stack-xs">
              <p class="av-kicker">FlashNote</p>
              <h1 class="av-section-title">Make every study session feel focused</h1>
              <p class="av-text-soft">
                Build decks quickly, import from Quiz, and keep review streaks simple with a clean study flow.
              </p>
            </div>

            <div class="av-row-wrap">
              <AvButton href="/decks">Create deck</AvButton>
              <AvButton href="/decks" variant="ghost">Import from Quiz</AvButton>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <div>
              <h2 class="av-card-heading">Quiz-powered flashcards</h2>
              <p class="av-text-soft">
                Pull curated questions from Quiz and turn them into review-ready cards in one step.
              </p>
            </div>
            <div class="av-row-wrap">
              <AvButton href="/decks" variant="ghost">Go to decks</AvButton>
            </div>
          </div>
        </AvCard>
      </div>
    </AvContainer>
  </section>
</AppShell>
